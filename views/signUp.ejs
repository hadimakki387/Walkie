<%- include('header'); -%>

<div class="h-24">
  <button><img src="walkie.png" alt="" class="w-36 m-4" /></button>
</div>
<div class="max-w-4xl m-auto">


  <!-- This is the title -->
  <div class="grid justify-center items-center m-auto text-center">
    <p class="text-4xl text-zinc-600">Welcome to Wag!</p>
    <p class="text-xl text-zinc-500">
      Sign up to stay up to date on your future requests.
    </p>
  </div>
  <!-- This is the title -->


  <!-- This is the buttons area -->
  <div class="flex justify-center items-center my-16 gap-3 max-[830px]:grid max-[830px]:-mb-3">
    <button
