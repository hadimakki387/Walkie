<%- include('../components/header'); -%>

<div class="h-24 flex items-center justify-center mt-4">
  <a href="/"
    ><img src="walkie.png" alt="" class="mb-10 w-52 max-[830px]:w-40"
  /></a>
</div>
<div class="max-w-4xl m-auto">
  <!-- This is the title -->
  <div class="grid justify-center items-center m-auto text-center">
    <p class="text-4xl text-zinc-600">Welcome to Wag!</p>
    <p class="text-xl text-zinc-500">
      Sign up to stay up to date on your future requests.
    </p>
  </div>


  <!-- This is the buttons area -->
  <div
    class="flex justify-center items-center my-12 gap-3 max-[830px]:grid max-[830px]:-mb-3"
  >
    <a
      href="/auth/google"
      class="flex justify-center items-center border border-solid border-black hover:bg-zinc-300 transition duration-200 px-6 py-3 rounded-lg"
    >
      <img src="google.png" alt="" class="w-8" />
      <p class="text-lg font-bold text-zinc-500 w-[13rem]">
        Continue with Google
      </p>
    </a>
  </div>


  <!-- This is the vertical line -->
 <%- include('components/BrWithOr') %>


  <!-- This is the signing by email form  -->
  <form action="/signUp" method="post">
    <div class="grid justify-start items-center max-[830px]:justify-center">
      <div
        class="flex gap-4 max-[830px]:grid max-[830px]:justify-center max-[830px]:items-center max-[830px]:gap-1"
      >
        <%- include('components/firstName') %>

        <%- include('components/lastName') %>
        

      </div>
      <div
        class="flex gap-4 max-[830px]:grid max-[830px]:justify-center max-[830px]:items-center max-[830px]:gap-1"
      >
        
      <%- include('components/email') %>

      <%- include('components/password') %>

      </div>
    </div>

    <div>
      <%if(error){%>
      <p class="text-red-600 text-center font-bold m-auto mb-4"><%=error%></p>
      <%}%>
    </div>

    <%- include('components/terms') %>

    <button
      class="bg-emerald-500 px-10 py-4 text-lg max-[830px]:text-base max-[830px]:px-4 max-[830px]:py-2 rounded-lg flex items-center justify-center m-auto font-bold text-white my-4 hover:bg-emerald-400"
    >
      Continue
    </button>
  </form>
  <!-- This is the signing by email form  -->
</div>

<%- include('../components/footer'); -%>
