<div class="l">
    <div class="fixed z-10 w-[100vw] top-0">
    <nav class="bg-white shadow-lg">
      <div class="mx-auto px-4">
        <div class="">
          <div class="flex justify-between">
            <!-- Primary Navbar items -->
            <div class="hidden md:flex items-center space-x-1">
              <!-- Website Logo -->
              <div class="">
                <a href="/" class="flex items-center py-4 px-2 mt-1">
                  <img
                    src="walkie.png"
                    alt="Logo"
                    class="mr-2 w-32 rotate-1"
                  />
                </a>
              </div>
              <a
                href="/"
                class="py-4 px-2 text-emerald-500 border-b-4 border-emerald-500 font-semibold links"
                >Home</a
              >
              <a
                href="#description"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-emerald-500 transition duration-300 links"
                >Why Us</a
              >
              <a
                href="#about"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-emerald-500 transition duration-300 links"
                >About</a
              >
              <a
                href="#contact"
                class="py-4 px-2 text-gray-500 font-semibold hover:text-emerald-500 transition duration-300 links"
                >Contact Us</a
              >
            </div>
            <!-- Secondary Navbar items -->
            <% if (name) { %>
              
                <div class="md:flex items-center space-x-3 mr-4">
                  <div
                    class="slider hidden absolute right-28 top-6 bg-white shadow-sm shadow-zinc-500 rounded-md"
                  >
                    <div
                      class="cursor-pointer hover:bg-emerald-500 hover:text-white py-3 px-5 rounded-t-md transition duration-200"
                    >
                      <a href="/dashboard">Profile</a>
                    </div>
                    <div
                      class="cursor-pointer hover:bg-emerald-500 hover:text-white py-3 px-5 rounded-b-md transition duration-200"
                    >
                      <a href="logout">Logout</a>
                    </div>
                  </div>
                    <img
                        src="uploads/<%=img%>"
                        alt=""
                        class="profile cursor-pointer bg-white flex justify-center items-center m-auto rounded-full h-16 w-16 object-contain"
                        
                        />
                </div>
              
              <% } else { %>
                <div class="hidden md:flex items-center space-x-3">
                  <a
                    href="signIn"
                    class="py-2 px-2 font-medium text-gray-500 rounded hover:bg-emerald-500 hover:text-white transition duration-300"
                    >Log In</a
                  >
                  <a
                    href="SignUp"
                    class="py-2 px-2 font-medium text-white bg-emerald-500 rounded hover:bg-emerald-400 transition duration-300"
                    >Sign Up</a
                  >
                </div>
              <% } %>
            
          </div>
          <div class="md:hidden flex justify-between items-center">
            <div class="">
              <a href="#" class="flex items-center py-4 px-2 mt-1">
                <img
                  src="walkie.png"
                  alt="Logo"
                  class="w-32 mr-2"
                />
              </a>
            </div>
            <div>
              <!-- Mobile menu button -->
              <div class="md:hidden flex items-center">
                <button class="outline-none mobile-menu-button">
                  <svg
                    class="w-8 h-8 text-emerald-500"
                    x-show="!showMenu"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path d="M4 6h16M4 12h16M4 18h16"></path>
                  </svg>
                </button>
              </div>
              <!-- Mobile menu -->
              <div
                class="hidden mobile-menu absolute right-12 top-8 bg-white rounded-lg z-10 shadow-md shadow-zinc-500"
              >
                <ul class="">
                  <li class="active">
                    <a
                      href="/"
                      class="block text-sm px-6 py-4 hover:bg-emerald-500 transition duration-300"
                      >Home</a
                    >
                  </li>
                  <li>
                    <a
                      href="/signIn"
                      class="block text-sm px-6 py-4 hover:bg-emerald-500 transition duration-300"
                      >Log In</a
                    >
                  </li>
                  <li>
                    <a
                      href="/signUp"
                      class="block text-sm px-6 py-4 hover:bg-emerald-500 transition duration-300"
                      >Sign Up</a
                    >
                  </li>
                  <li>
                    <a
                      href="#about"
                      class="block text-sm px-6 py-4 hover:bg-emerald-500 transition duration-300"
                      >About</a
                    >
                  </li>
                  <li>
                    <a
                      href="#contact"
                      class="block text-sm px-6 py-4 hover:bg-emerald-500 transition duration-300"
                      >Contact Us</a
                    >
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
